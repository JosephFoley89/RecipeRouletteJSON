<Window x:Class="RecipeRoulletteJSON.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeRoulletteJSON"
        mc:Ignorable="d"
        Title="RecipeRoulette" Height="475" Width="1200">
    <Grid>
        <ListBox Name="RecipeList" Margin="10,10,0,38" HorizontalAlignment="Left" Width="190" ItemsSource="{Binding}" DisplayMemberPath="Name" SelectionChanged="RecipeList_SelectionChanged" FontFamily="Arial" FontSize="12" Grid.ColumnSpan="2"/>
        <TextBlock Name="Description" HorizontalAlignment="Left" Margin="213,10,0,0" TextWrapping="Wrap" Text="{Binding}" IsEnabled="False" VerticalAlignment="Top" Width="293" Height="105" FontSize="12" FontFamily="Arial"/>
        <ListBox Name="IngredientList" Margin="213,120,0,38" ItemsSource="{Binding}" HorizontalAlignment="Left" Width="293" FontFamily="Arial" FontSize="12"/>
        <ListBox Name="Instructions" Margin="521,10,10,38" ItemsSource="{Binding}" FontFamily="Arial" FontSize="12"/>
        <Button Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="10,404,0,0" Click="AddButton_Click" Width="82" Height="20" VerticalAlignment="Top"/>
        <Button Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Margin="120,404,0,0" Width="80" Click="DeleteButton_Click" Height="20" VerticalAlignment="Top"/>
        <Button Name="GeneratePlanButton" Content="GeneratePlan" HorizontalAlignment="Left" Margin="213,404,0,0" Width="80" Click="GeneratePlanButton_Click" Height="20" VerticalAlignment="Top"/>
    </Grid>
</Window>
